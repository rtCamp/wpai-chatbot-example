{
	"name": "wpai-chatbot",
	"private": true,
	"version": "1.0.0",
	"description": "",
	"author": "rtCamp",
	"devDependencies": {
		"@babel/core": "^7.28.0",
		"@wordpress/babel-preset-default": "^8.27.0",
		"@wordpress/browserslist-config": "^6.27.0",
		"@wordpress/env": "^10.27.0",
		"@wordpress/eslint-plugin": "^22.13.0",
		"@wordpress/scripts": "^30.20.0",
		"browserslist": "^4.25.1",
		"cross-env": "^10.1.0",
		"css-minimizer-webpack-plugin": "^7.0.2",
		"eslint": "^8.57.1",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.32.0",
		"globals": "^16.3.0",
		"lint-staged": "^16.1.2",
		"npm-run-all": "^4.1.5",
		"webpack-remove-empty-scripts": "^1.1.1"
	},
	"files": [
		"assets/build",
		"inc",
		"vendor",
		"README.md",
		"wpai-chatbot.php"
	],
	"scripts": {
		"build:dev": "cross-env NODE_ENV=development npm-run-all 'build:!(dev|prod)'",
		"build:prod": "cross-env NODE_ENV=production npm-run-all 'build:!(dev|prod)'",
		"build:js": "wp-scripts build --config ./webpack.config.js",
		"build:php": "composer install --no-dev --no-interaction --optimize-autoloader",
		"clean": "rm -rf assets/build/* && rm -rf vendor && rm -rf node_modules",
		"composer:install": "composer install",
		"format": "wp-scripts format",
		"install-local-deps": "npm install && npm-run-all --parallel build:js composer:install",
		"lint": "npm-run-all --parallel lint:*",
		"lint:css": "wp-scripts lint-style './assets/src'",
		"lint:css:fix": "wp-scripts lint-style ./assets/src --fix",
		"lint:js": "ESLINT_USE_FLAT_CONFIG=false eslint -c .eslintrc.cjs ./assets/src",
		"lint:js:fix": "npm run lint:js -- --fix",
		"lint:js:report": "npm run lint:js -- --output-file lint-js-report.json --format json .",
		"lint:php": "composer run-script phpcs",
		"lint:php:fix": "composer run-script phpcs:fix",
		"lint:php:stan": "composer run-script phpstan",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start"
	}
}
